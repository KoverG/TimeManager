<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controllers.DayViewController"
      spacing="10"
      styleClass="day-container">

    <!-- Навигация -->
    <HBox alignment="CENTER" spacing="1">
        <Button text="◀" onAction="#previousDay" styleClass="day-nav-button"/>
        <Label fx:id="dateLabel" styleClass="header-label"/>
        <Button text="▶" onAction="#nextDay" styleClass="day-nav-button"/>
    </HBox>

    <!-- Баннер действий -->
    <HBox styleClass="action-banner" alignment="CENTER" spacing="10">
        <!-- Левая группа: Тип дня и Рабочий день -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Тип дня:"/>
                <ComboBox fx:id="dayTypeCombo" prefWidth="145" minWidth="50" styleClass="custom-combo"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Рабочий день:"/>
                <TextField fx:id="workHoursField" prefWidth="40" styleClass="custom-text-field centered-text-field"/>
            </HBox>
        </HBox>

        <!-- Растягивающийся регион -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Правая группа: Потрачено на задачи -->
        <HBox alignment="CENTER_RIGHT" spacing="5">
            <Label text="Потрачено на задачи:"/>
            <Label fx:id="totalTimeLabel"/>
        </HBox>
    </HBox>

    <!-- NEW BLOCK: Две заметки с комбобоксами времени и Jira чекбоксом -->
    <HBox alignment="CENTER" spacing="10" styleClass="notes-container">
        <!-- Ячейка с временем -->
        <Label text="08:00" styleClass="time-label"/>

        <TextArea fx:id="notesField1" styleClass="notes-text-area"
                  promptText="Номер задачи..."/>

        <HBox alignment="CENTER" spacing="5">
            <ComboBox fx:id="hoursCombo" styleClass="time-combo"/>
            <ComboBox fx:id="minutesCombo" styleClass="time-combo"/>
        </HBox>

        <TextArea fx:id="notesField2" styleClass="notes-text-area"
                  promptText="Комментарий..."/>

        <!-- NEW BLOCK: Jira чекбокс -->
        <VBox alignment="CENTER" styleClass="jira-container">
            <CheckBox styleClass="jira-checkbox"/>
        </VBox>
    </HBox>

    <!-- Кнопки действий -->
    <HBox alignment="CENTER" spacing="20">
        <Button text="Сохранить" onAction="#saveDay" styleClass="embossed-button"/>
        <Button text="Очистить" onAction="#clearDay" styleClass="embossed-button"/>
        <Button text="Назад" onAction="#backToCalendar" styleClass="embossed-button"/>
    </HBox>
</VBox>
